
LayoutExempleTabs

<LayoutExempleTabs>:
    do_default_tab: False
    TabbedPanelItem:
        text: "relevé °"
        PageLayout:
            BoxLayoutApp:
            TextInput:
                text:root.enregistrement_temperature
                multiline:True
    TabbedPanelItem:
        text: "relevé ° salle"




    TabbedPanelItem:
        text: "Melanie"
        BoxLayout:
            orientation: "vertical"
            TextInput:
                id: button_commande_melanie
                text :root.commande_melanie_text(self)
                multiline : True
            Button:
                text: "commander"
                size_hint: None,None
                size: 100,100
                pos_hint: {"center_x":0.5}
                on_press: root.commande_melanie_button(self)
    TabbedPanelItem:
        text: "Bernat"
        BoxLayout:
            orientation: "vertical"
            TextInput:
                id: button_commande_bernat
                text :root.commande_bernat_text(self)
                multiline : True
            Button:
                text: "commander"
                size_hint: None,None
                size: 100,100
                pos_hint: {"center_x":0.5}
    TabbedPanelItem:
        text: "cbs"
        BoxLayout:
            orientation: "vertical"
            TextInput:
                id: button_commande_cbs
                text :root.commande_cbs_text(self)
                multiline : True
            Button:
                text: "commander"
                size_hint: None,None
                size: 100,100
                pos_hint: {"center_x":0.5}


